// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Actions {
  id            String       @id
  description   String
  Permissions   Permissions? @relation(fields: [permissionsId], references: [id])
  permissionsId String?
  createdAt     DateTime?    @default(now()) @map("created_at")
  updatedAt     DateTime?    @updatedAt @map("updated_at")

  @@map("actions")
}

model Permissions {
  id              String    @id
  description     String
  active          Boolean
  fullPrivilegies Boolean   @map("full_privileges")
  actions         Actions[]
  createdAt       DateTime? @default(now()) @map("created_at")
  updatedAt       DateTime? @updatedAt @map("updated_at")


  User User[]
  @@map("permissions")
}

model AddressType {
  id          String    @id
  description String
  createdAt   DateTime? @default(now()) @map("created_at")
  updatedAt   DateTime? @updatedAt @map("updated_at")

  Addresses Addresses[]
  @@map("address_type")
}

model Addresses {
  id               String             @id
  address          String
  zipCode          String             @unique @map("zip_code")
  number           Int
  type             AddressType        @relation(fields: [addressTypeId], references: [id])
  addressTypeId    String             @map("address_type")
  user             User[]
  createdAt        DateTime?          @default(now()) @map("created_at")
  updatedAt        DateTime?          @updatedAt @map("updated_at")
  AddressesOnUsers AddressesOnUsers[]

  @@map("addresses")
}

model User {
  id               String             @id
  firstName        String             @map("first_name")
  lastName         String             @map("last_name")
  active           Boolean
  birthday         String
  phone            String
  email            String             @unique
  password         String
  image            String
  Addresses        Addresses[]
  AddressesOnUsers AddressesOnUsers[]
  createdAt        DateTime?          @default(now()) @map("created_at")
  updatedAt        DateTime?          @updatedAt @map("updated_at")


  Permissions   Permissions? @relation(fields: [permissionsId], references: [id])
  permissionsId String?
  @@map("users")
}

model AddressesOnUsers {
  user        User      @relation(fields: [userId], references: [id])
  address     Addresses @relation(fields: [addressesId], references: [id])
  userId      String
  addressesId String

  @@id([addressesId, userId])
  @@map("addresses_on_users")
}
